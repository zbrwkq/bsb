{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="mt-3">Détails de {{ produit.nom }}</h1>
        {% if is_granted('ROLE_USER') %}
            <a href="{{ path('app_contenu_panier', {'id': produit.id}) }}" class="btn btn-outline-success">Ajouter au panier</a>
        {% endif %}
    </div>

    <table class="table bg-success p-2 text-dark bg-opacity-10">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}€</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ produit.stock }} unitées</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>
                    <img src="{{ asset('/uploads/') ~ produit.photo }}" alt="{{ produit.nom }}" width="50px">
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_produit_index') }}" class="btn btn-secondary">Retour à la liste des produits</a>

    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-primary">Modifier le produit</a>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
