{% extends 'base.html.twig' %}

{% block title %}Hello PanierController!{% endblock %}

{% block body %}
    <h1>{{'Commande %id% du %date%'|trans('%id%': commande.id, '%date%': commande.dateAchat)}}</h1>
    <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>{{'Produit'|trans}}</th>
                    <th>{{'Quantite'|trans}}</th>
                    <th>{{'Prix'|trans}}</th>
                </tr>
            </thead>
            <tbody>
            {% for contenu in commande %}
                <tr>
                    <td>{{ c.commande.id }}</td>
                    <td>{{ commande.commande.dateAchat|date('Y/m/d') }}</td>
                    <td>{{ commande.montant }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
{% endblock %}
