{% extends 'base.html.twig' %}

{% block title %}{{ 'inscrits.derniers_inscrits'|trans }}{% endblock %}

{% block body %}
    <h1 class="mt-3">{{ 'inscrits.liste_des_personnes_inscrites_aujourdhui'|trans }}</h1>
    <table class="table">
        <thead>
            <th>{{ 'inscrits.nom_prenom'|trans }}</th>
            <th>{{ 'inscrits.email'|trans }}</th>
            <th>{{ 'inscrits.date_inscription'|trans }}</th>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.nom }} {{ user.prenom }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.dateInscription|date('d/m/Y') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">{{ 'inscrits.personne'|trans }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}